<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yusei.yupiaopiao.MovieDetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                    android:id="@+id/rl_cinecismTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="观众热评"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text=""
                        android:textSize="30sp"
                        android:id="@+id/tv_writeCinecism"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_cinecism"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_cinecismTitle">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>



    </ScrollView>

    <TextView
            android:id="@+id/tv_buy"
            android:text="立即购票"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#436EEE"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:clickable="true"/>

</RelativeLayout>
