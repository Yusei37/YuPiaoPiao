<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/chat_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ListView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="match_parent"/>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:backgroundTint="#FFF"
            app:elevation="8dp"
            android:src="@drawable/btn_selector" android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:layout_marginBottom="25dp" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="21dp"/>


</RelativeLayout>