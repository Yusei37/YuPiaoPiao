<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yusei.yupiaopiao.BookingActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/booking_bg"/>

                <TextView
                        android:id="@+id/tv_booking_moviename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电影名"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/tv_booking_movietime"/>

                <TextView
                        android:id="@+id/tv_booking_movietime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017—12—25 19:00:00"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>

                <TextView
                        android:id="@+id/tv_booking_theatre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="德信影院杭州运河上街店"
                        android:textSize="18sp"
                        android:layout_below="@+id/tv_booking_movietime"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"/>

                <TextView
                        android:id="@+id/tv_booking_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11号厅 4排5座"
                        android:textSize="18sp"
                        android:layout_below="@+id/tv_booking_theatre"
                        android:layout_alignStart="@+id/tv_booking_theatre"/>

            </RelativeLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:paddingStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|start"
                        android:text="特惠活动"
                        android:textSize="20sp"/>

                <TextView
                        android:paddingStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|start"
                        android:text="电影代金券"
                        android:textSize="20sp"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                    <TextView
                            android:paddingStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="票价总计"
                            android:textSize="20sp"
                            android:layout_alignParentStart="true"/>

                    <TextView
                            android:paddingEnd="5dp"
                            android:id="@+id/tv_booking_price"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="100元"
                            android:textSize="20sp"
                            android:layout_alignParentEnd="true"/>


                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="购票须知"
                        android:textSize="25sp"
                        android:textColor="#000000"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.由于设备故障等不可抗力因素，存在少量场次取消的情况，会进行退票退款。\n2.由于影院系统不稳定等因素，存在出票失败的情况，会进行退款。\n3.下单即代表你同意《yupiaopiao用户服务协议》"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="立即付款"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#436EEE"
            android:gravity="center"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

</RelativeLayout>
